{
  "name": "konflux",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"firebase emulators:start\"",
    "build": "yarn test && next build",
    "start": "next start",
    "test": "jest",
    "lint": "next lint",
    "prepare": "husky install",
    "e2e": "yarn run cy:test",
    "cy:test": "cypress run --headed --no-exit --browser chrome",
    "cy:headless": "cypress run --browser chrome",
    "cy:open": "cypress open --e2e --browser chrome"
  },
  "dependencies": {
    "@reach/alert": "^0.17.0",
    "@reach/alert-dialog": "^0.17.0",
    "@reach/dialog": "^0.17.0",
    "@reach/tooltip": "^0.17.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chroma-js": "^2.1.4",
    "@types/react-toastify": "^4.1.0",
    "babel-jest": "^29.0.1",
    "chroma-js": "^2.4.2",
    "dayjs": "^1.11.5",
    "firebase": "^9.9.3",
    "framer-motion": "^7.5.1",
    "identity-obj-proxy": "^3.0.0",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-toastify": "^9.0.8",
    "react-tooltip": "^4.2.21",
    "sass": "^1.54.4",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
